<div class="container">
  
  <table border=1 class="type-header">
    <tr> 
      <td><%= @type.title %></td>
      <td><%= @type.created_at %></td>
      <td><%= @type.user.email %></td>
    </tr>
  </table>
  <div class="type-content">
    <p>
      <%= @type.content %>
    </p>
    <%= link_to "Edit", edit_type_path(@type) %> 
    <%= link_to "Delete", type_path(@type), method: :delete %> 
  </div>
  
</div>
